extends ../layout

block content
    .container
        a(href='/users') Back
        br
        br
        br

        h1 Creating new User
        br
        br

        form(action='/users/create' method='post')
            .form-group
                label(for='name') Name:
                input#code.form-control(type='text' name='name' value=user.name class=errors.name ? 'is-invalid' : '' )
                if errors.name
                    small#nameHelp.text-danger
                        = errors.name.message
            .form-group
                label(for='email') Email:
                input#color.form-control(type='text' name='email' value=user.email class=errors.email ? 'is-invalid' : '' )
                if errors.email
                    small#emailHelp.text-danger
                        = errors.email.message
            .form-group
                label(for='pwd') Password:
                input#model.form-control(type='password' name='password' value=user.password class=errors.password ? 'is-invalid' : '' )
                if errors.password
                    small#passwordHelp.text-danger
                        = errors.password.message
            .form-group
                label(for='confirm_pwd') Confirm Password:
                input#lat.form-control(type='password' name='confirm_password' value=user.password class=errors.confirm_password ? 'is-invalid' : '' )
                if errors.confirm_password
                    small#confirm_passwordHelp.text-danger
                        = errors.confirm_password.message
            br
            br
            button.btn.btn-primary(type='submit' value='OK') Submit
